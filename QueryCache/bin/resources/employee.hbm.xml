<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
  <class name="beans.Employee" table="Employee01" schema="system"> 
      <cache usage="read-write"/> 
    <id name="eid"/>  
    <property name="ename" length="30" not-null="true"></property>  
    <property name="email" length="40" not-null="true"></property> 
    <property name="salary" length="7" not-null="true"></property>   
            
  </class>  
            
 </hibernate-mapping>  